<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_card_layout"
    android:layout_width="match_parent"
    android:layout_height="310dp"
    android:layout_margin="10dp"
    card_view:cardElevation="40sp"
    >

    <!--android:backgroundTint="@android:color/holo_green_light"-->


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/card_layout_event_image"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/d"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_layout_event_title"
                android:text="TITLE"
                android:textSize="14dp"
                android:textStyle="bold"
                android:gravity="center"
                android:maxLines="1"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/card_layout_event_image"
                android:textColor="#222"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_layout_event_venue"
                android:text="Venue"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/card_layout_event_title"
                android:textColor="#666"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                />


        </RelativeLayout>

</android.support.v7.widget.CardView>



