<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rv_card_layout"
        card_view:cardCornerRadius="16dp"
        android:backgroundTint="@android:color/holo_green_light"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/card_layout_event_image"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:src="@drawable/d"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_layout_event_title"
                android:text="TITLE"
                android:textSize="14dp"
                android:gravity="center"
                android:layout_below="@+id/card_layout_event_image"
                android:textColor="#222"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_layout_event_date"
                android:gravity="center"
                android:layout_below="@+id/card_layout_event_title"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/card_layout_event_venue"
                android:text="Venue"
                android:gravity="center"
                android:layout_below="@+id/card_layout_event_date"
                android:textColor="#666"
                />

            <!--<Button-->
                <!--android:id="@+id/card_layout_event_button_share"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_below="@+id/card_layout_event_venue"-->
                <!--/>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>

